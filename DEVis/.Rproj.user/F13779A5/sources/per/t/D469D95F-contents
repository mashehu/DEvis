library(DESeq2)

#' An S4 class extending the DESeqResults object. Contains additional fields.
#'
#' @importClassesFrom DESeq2 DESeqResults
#' @export
setClass("DESeqResMeta",
         slots = list(
           numDE = "numeric",
           numUp = "numeric",
           numDown = "numeric",
           allNames = "character",
           upNames = "character",
           downNames = "character",
           case = "character",
           control = "character",
           contrast = "character",
           design_field = "character"
         ),

         contains = "DESeqResults"
)
